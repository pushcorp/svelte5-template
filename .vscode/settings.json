{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit", // ESLintのエラーを修正する
      "quickfix.biome": "explicit",
      "source.organizeImports.biome": "explicit"
    },
    "editor.defaultFormatter": "biomejs.biome",
    "[javascript]": {
      "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescript]": {
      "editor.defaultFormatter": "biomejs.biome"
    },
    "[svelte]": {
      //"editor.defaultFormatter": "biomejs.biome" <- BiomeのフォーマッターはまだSvelteだと弱いのでコメントアウトする
      "editor.defaultFormatter": "svelte.svelte-vscode",
    },
    "[json]": {
      "editor.defaultFormatter": "biomejs.biome"
    },
    "[css]": {
      "editor.defaultFormatter": "biomejs.biome"
    },
    // Svelteファイル内でTypeScriptの型情報を正しく表示するための設定
    "svelte.enable-ts-plugin": true,
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "editor.quickSuggestions": {
      "strings": true
    },
    "typescript.suggest.enabled": true,
    "typescript.suggest.paths": true,
    "typescript.tsserver.log": "verbose",
    "svelte.plugin.typescript.diagnostics.enable": true,
    "svelte.plugin.svelte.format.enable": true,
    "[jsonc]": {
      "editor.defaultFormatter": "biomejs.biome"
    },
    "[html]": {
      "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[markdown]": {
      "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "terminal.integrated.rightClickBehavior": "selectWord",
    "terminal.integrated.copyOnSelection": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "files.insertFinalNewline": true,
    "explorer.sortOrder": "filesFirst",
    "workbench.tree.indent": 12,
    "workbench.editor.labelFormat": "short",
    "explorer.compactFolders": false,
    "[firestorerules]": {
      "editor.formatOnSave": false,
      "editor.defaultFormatter": ""
    }
  }
  